<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cricket Players List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f8ff;
        }
        .navbar {
            background-color: #1e3a8a;
        }
        .nav-link {
            color: #ffffff;
        }
        .nav-link:hover, .nav-link.active {
            color: #ffd700;
        }
        .player-card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        .player-card:hover {
            transform: translateY(-5px);
        }
        .player-name {
            color: #1e3a8a;
            font-weight: bold;
        }
        #searchBar {
            max-width: 300px;
            margin: 0 auto 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">CricketMania</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#mens">Men's Teams</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#womens">Women's Teams</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#ilt20">ILT20 Teams</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#ipl">IPL Teams</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1 class="text-center mb-4">Cricket Players</h1>

        <div id="searchBar" class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search for a player..." id="playerSearch">
            <button class="btn btn-outline-secondary" type="button" id="searchButton">Search</button>
        </div>

        <% const teamCategories = [
            { id: 'mens', name: "Men's International Teams", players: menInternationalPlayers },
            { id: 'womens', name: "Women's International Teams", players: womenInternationalPlayers },
            { id: 'ilt20', name: "ILT20 Teams", players: ilt20Players },
            { id: 'ipl', name: "IPL Teams", players: iplPlayers }
        ]; %>

        <% teamCategories.forEach(category => { %>
            <section id="<%= category.id %>" class="mb-5">
                <h2 class="mb-3"><%= category.name %></h2>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    <% category.players.forEach(player => { %>
                        <div class="col player-item">
                            <div class="player-card p-3">
                                <a href="/player/<%= player.id %>" class="text-decoration-none">
                                    <h5 class="player-name mb-2"><%= player.name %></h5>
                                    <p class="mb-0"><%= player.team %></p>
                                </a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </section>
        <% }); %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('playerSearch');
            const searchButton = document.getElementById('searchButton');
            const playerItems = document.querySelectorAll('.player-item');

            function searchPlayers() {
                const searchTerm = searchInput.value.toLowerCase();
                playerItems.forEach(item => {
                    const playerName = item.querySelector('.player-name').textContent.toLowerCase();
                    const playerTeam = item.querySelector('p').textContent.toLowerCase();
                    if (playerName.includes(searchTerm) || playerTeam.includes(searchTerm)) {
                        item.style.display = '';
                    } else {
                        item.style.display = 'none';
                    }
                });
            }

            searchButton.addEventListener('click', searchPlayers);
            searchInput.addEventListener('keyup', function(event) {
                if (event.key === 'Enter') {
                    searchPlayers();
                }
            });
        });
    </script>
</body>
</html>