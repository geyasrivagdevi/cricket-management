<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Player Profile - <%= player.fullname %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-r from-blue-200 to-blue-500 min-h-screen">
    <nav class="bg-blue-600 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-2xl font-bold">CricketMania</a>
            <a href="/players" class="hover:text-blue-200 transition duration-300">
                <i class="fas fa-arrow-left mr-2"></i>Back to Players
            </a>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
            <div class="flex items-center mb-6">
                <img src="<%= player.imagePath %>" alt="<%= player.fullname %>" class="w-32 h-32 rounded-full border-4 border-blue-500 shadow-lg mr-4">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800"><%= player.fullname %></h1>
                    <p class="text-gray-600 text-lg"><%= player.position %></p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-gray-700">
                <div>
                    <div class="flex items-center mb-2">
                        <i class="fas fa-user-circle text-blue-500 mr-3"></i>
                        <span><strong>First Name:</strong> <%= player.firstname %></span>
                    </div>
                    <div class="flex items-center mb-2">
                        <i class="fas fa-user-circle text-blue-500 mr-3"></i>
                        <span><strong>Last Name:</strong> <%= player.lastname %></span>
                    </div>
                    <div class="flex items-center mb-2">
                        <i class="fas fa-calendar-alt text-blue-500 mr-3"></i>
                        <span><strong>Date of Birth:</strong> <%= player.dateOfBirth %></span>
                    </div>
                    <div class="flex items-center mb-2">
                        <i class="fas fa-genderless text-blue-500 mr-3"></i>
                        <span><strong>Gender:</strong> <%= player.gender %></span>
                    </div>
                </div>

                <div>
                    <div class="flex items-center mb-2">
                        <i class="fas fa-baseball-ball text-blue-500 mr-3"></i>
                        <span><strong>Batting Style:</strong> <%= player.battingStyle %></span>
                    </div>
                    <div class="flex items-center mb-2">
                        <i class="fas fa-bowling-ball text-blue-500 mr-3"></i>
                        <span><strong>Bowling Style:</strong> <%= player.bowlingStyle %></span>
                    </div>
                    <div class="flex items-center mb-2">
                        <i class="fas fa-user-tag text-blue-500 mr-3"></i>
                        <span><strong>Position:</strong> <%= player.position %></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Career Stats Section -->
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Career Stats</h2>
        <div class="bg-white rounded-lg shadow-lg p-6 mb-8 overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-4 py-2 text-left">Format</th>
                        <th class="px-4 py-2 text-left">Matches</th>
                        <th class="px-4 py-2 text-left">Runs</th>
                        <th class="px-4 py-2 text-left">Wickets</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% careerStats.forEach(stat => { %>
                        <tr class="hover:bg-gray-100 transition duration-150 ease-in-out">
                            <td class="px-4 py-2"><%= stat.format || 'N/A' %></td>
                            <td class="px-4 py-2"><%= stat.matches || 'N/A' %></td>
                            <td class="px-4 py-2"><%= stat.runs || 'N/A' %></td>
                            <td class="px-4 py-2"><%= stat.wickets || 'N/A' %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Back to Players Button -->
        <a href="/players" class="inline-block bg-blue-500 text-white px-6 py-3 rounded-md shadow hover:bg-blue-600 transition duration=300">Back to Players</a>

    </div>

    <!-- Footer -->
    <footer class="bg-blue-600 text-white text-center py=3 mt-auto">
        &copy; 2023 CricketMania. All rights reserved.
    </footer>

    <!-- Tailwind JS -->
    <!-- Include any necessary scripts here -->
</body>
</html>
