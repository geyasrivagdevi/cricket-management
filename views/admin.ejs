<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cricket Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-image: url('https://wallpaperaccess.com/full/1088580.jpg');
            background-size: cover;
            background-attachment: fixed;
            color: #333;
        }
        .container {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 30px;
            margin-top: 50px;
            margin-bottom: 50px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        h1, h2 {
            color: #1e3a8a;
            border-bottom: 2px solid #1e3a8a;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .btn-primary {
            background-color: #1e3a8a;
            border-color: #1e3a8a;
        }
        .btn-primary:hover {
            background-color: #152c6e;
            border-color: #152c6e;
        }
        .form-section {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
            transition: transform 0.3s ease;
        }
        .form-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .list-group-item {
            transition: background-color 0.3s;
        }
        .list-group-item:hover {
            background-color: #e9ecef;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-5"><i class="fas fa-cricket fa-lg me-3"></i>Cricket Admin Dashboard</h1>

        <div class="row">
            <div class="col-md-6">
                <div class="form-section">
                    <h2><i class="fas fa-plus-circle me-2"></i>Create Team</h2>
                    <form action="/admin/add-team" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="teamName" class="form-label">Team Name</label>
                            <input type="text" class="form-control" id="teamName" name="teamName" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Team</button>
                    </form>
                </div>

                <!-- In the Create Team form -->
               <div class="mb-3">
                    <label for="teamFlag" class="form-label">Team Flag</label>
                    <input type="file" class="form-control" id="teamFlag" name="teamFlag" accept="image/*">
                </div>

                <div class="form-section">
                    <h2><i class="fas fa-edit me-2"></i>Update Team</h2>
                    <form action="/admin/update-team" method="POST">
                        <div class="mb-3">
                            <label for="teamId" class="form-label">Team ID</label>
                            <input type="text" class="form-control" id="teamId" name="teamId" required>
                        </div>
                        <div class="mb-3">
                            <label for="newTeamName" class="form-label">New Team Name</label>
                            <input type="text" class="form-control" id="newTeamName" name="newTeamName" required>
                        </div>
                        <button type="submit" class="btn btn-warning">Update Team</button>
                    </form>
                </div>

                <div class="form-section">
                    <h2><i class="fas fa-trash-alt me-2"></i>Delete Team</h2>
                    <form action="/admin/delete-team" method="POST">
                        <div class="mb-3">
                            <label for="deleteTeamId" class="form-label">Team ID</label>
                            <input type="text" class="form-control" id="deleteTeamId" name="deleteTeamId" required>
                        </div>
                        <button type="submit" class="btn btn-danger">Delete Team</button>
                    </form>
                </div>

                <div class="form-section">
                    <h2><i class="fas fa-list me-2"></i>Teams List</h2>
                    <ul id="teamList" class="list-group">
                        <!-- Teams will be populated here via JavaScript -->
                    </ul>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-section">
                    <h2><i class="fas fa-user-plus me-2"></i>Create Player</h2>
                    <form action="/admin/add-player" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="playerName" class="form-label">Player Name</label>
                            <input type="text" class="form-control" id="playerName" name="playerName" required>
                        </div>
                        <div class="mb-3">
                            <label for="teamId" class="form-label">Team ID</label>
                            <input type="text" class="form-control" id="teamId" name="teamId" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Player</button>
                    </form>
                </div>

                <!-- In the Create Player form -->
                <div class="mb-3">
                   <label for="playerPhoto" class="form-label">Player Photo</label>
                   <input type="file" class="form-control" id="playerPhoto" name="playerPhoto" accept="image/*">
                </div>

                <div class="form-section">
                    <h2><i class="fas fa-user-edit me-2"></i>Update Player</h2>
                    <form action="/admin/update-player" method="POST">
                        <div class="mb-3">
                            <label for="playerId" class="form-label">Player ID</label>
                            <input type="text" class="form-control" id="playerId" name="playerId" required>
                        </div>
                        <div class="mb-3">
                            <label for="newPlayerName" class="form-label">New Player Name</label>
                            <input type="text" class="form-control" id="newPlayerName" name="newPlayerName" required>
                        </div>
                        <div class="mb-3">
                            <label for="newTeamId" class="form-label">New Team ID</label>
                            <input type="text" class="form-control" id="newTeamId" name="newTeamId" required>
                        </div>
                        <button type="submit" class="btn btn-warning">Update Player</button>
                    </form>
                </div>

                <div class="form-section">
                    <h2><i class="fas fa-user-minus me-2"></i>Delete Player</h2>
                    <form action="/admin/delete-player" method="POST">
                        <div class="mb-3">
                            <label for="deletePlayerId" class="form-label">Player ID</label>
                            <input type="text" class="form-control" id="deletePlayerId" name="deletePlayerId" required>
                        </div>
                        <button type="submit" class="btn btn-danger">Delete Player</button>
                    </form>
                </div>

                <div class="form-section">
                    <h2><i class="fas fa-users me-2"></i>Players List</h2>
                    <ul id="playerList" class="list-group">
                        <!-- Players will be populated here via JavaScript -->
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function fetchTeams() {
            try {
                const response = await fetch('/admin/teams');
                const teams = await response.json();
                const teamList = document.getElementById('teamList');
                teamList.innerHTML = teams.map(team => `
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        ${team.name}
                        <span class="badge bg-primary rounded-pill">ID: ${team._id}</span>
                    </li>
                `).join('');
            } catch (error) {
                console.error('Error fetching teams:', error);
            }
        }

        async function fetchPlayers() {
            try {
                const response = await fetch('/admin/players');
                const players = await response.json();
                const playerList = document.getElementById('playerList');
                playerList.innerHTML = players.map(player => `
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        ${player.name}
                        <span class="badge bg-info rounded-pill">Team: ${player.team.name}</span>
                    </li>
                `).join('');
            } catch (error) {
                console.error('Error fetching players:', error);
            }
        }

        fetchTeams();
        fetchPlayers();
    </script>
</body>
</html>