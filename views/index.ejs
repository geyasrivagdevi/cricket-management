<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CricketMania</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-image: url('https://www.circlehealthgroup.co.uk/-/media/circle/articles/blogs/health-matters/hero/common-cricket-injuries.jpg?as=1&h=630&iar=1&w=1200&rev=f05c3bbc4b4a44a3a9f21514d1ef745e');
            background-size: cover;
            background-attachment: fixed;
            background-repeat: no-repeat;
            color: #333;
        }
        .navbar {
            background-color: #1e3a8a;
            padding: 1rem;
        }
        .navbar-brand, .nav-link {
            color: #fff !important;
            transition: color 0.3s ease;
        }
        .nav-link:hover {
            color: #ffd700 !important;
        }
        .content {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 2rem;
            margin-top: 5rem; /* Ensures content is not hidden behind the fixed navbar */
        }
        .news-card {
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 1.5rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .news-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        .news-card img {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            object-fit: cover;
            height: 200px;
            width: 100%;
        }
        .news-content {
            padding: 1.5rem;
        }
        .news-title {
            font-size: 1.25em;
            font-weight: bold;
            color: #1e5799;
        }
        .news-text {
            font-size: 0.9em;
            color: #666;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand"><i class="fas fa-cricket"></i> CricketMania</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link active" href="/index"><i class="fas fa-home"></i> Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/players"><i class="fas fa-user"></i> Players</a></li>
                    <li class="nav-item"><a class="nav-link" href="/teams"><i class="fas fa-users"></i> Teams</a></li>
                    <li class="nav-item"><a class="nav-link" href="/matches"><i class="fas fa-trophy"></i> Matches</a></li>
                    <li class="nav-item"><a class="nav-link" href="/live_scores"><i class="fas fa-chart-line"></i> Live Scoring</a></li>
                    <li class="nav-item"><a class="nav-link" href="/about"><i class="fas fa-info-circle"></i> About</a></li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" id="logoutBtn" href="#"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5 pt-5">
        <div class="content">
            <h1 class="text-center mb-4">Latest Cricket News</h1>
            <div class="row" id="newsContainer"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const newsItems = [
            {
                title: "India Clinches T20 Series Against Australia",
                content: "In a thrilling last-ball finish, India secured a 2-1 victory in the T20 series against Australia.",
                image: "https://www.aljazeera.com/wp-content/uploads/2023/12/AP23335589458876-1701453647.jpg?resize=1920%2C1440"
            },
            {
                title: "India's Historic Win Against England",
                content: "India achieved a historic win against England in the recent Test series, marking a significant milestone.",
                image: "https://www.en.etemaaddaily.com/pages/sports/cricket/8640indiawin.jpg"
            },
            {
                title: "England's Star Bowler Sidelined with Injury",
                content: "England's leading fast bowler has been ruled out of the upcoming Test series due to a shoulder injury.",
                image: "https://d3gvyx4eg3tne0.cloudfront.net/wp-content/uploads/2022/05/Img33382824-1.jpg"
            },
            {
                title: "IPL 2024 Auction Date Set",
                content: "The IPL Governing Council has announced December 15, 2023, as the date for the IPL 2024 player auction.",
                image: "https://cdn.zeebiz.com/sites/default/files/2023/12/04/271395-your-paragraph-text-3.jpg"
            },
            {
                title: "New Zealand Unveils World Cup Squad",
                content: "New Zealand Cricket has revealed their 15-member squad for the upcoming ODI World Cup, featuring some surprise selections.",
                image: "https://th.bing.com/th/id/OIP.WXfglmFnAUhXX0_kHsr4ZQHaD4?rs=1&pid=ImgDetMain"
            },
            {
                title: "Record Partnership in County Cricket",
                content: "Two batsmen have set a new record for the highest partnership in English county cricket, amassing 433 runs together.",
                image: "https://img1.hscicdn.com/image/upload/f_auto/esci/i/cricket/cricinfo/1200413_1296x729.jpg"
            },
            {
                title: "Women's T20 World Cup Dates Announced",
                content: "The ICC has confirmed the dates for the next Women's T20 World Cup, set to take place in Australia.",
                image: "https://th.bing.com/th/id/OIP.bZVlCjyY9anhBq3nY7IYmQAAAA?rs=1&pid=ImgDetMain"
            },
            {
                title: "Rising Star: Young Spinner Makes International Debut",
                content: "A 19-year-old spinner has been called up to the national team, making waves with his impressive domestic performances.",
                image: "https://burjnews.com/wp-content/uploads/2022/12/Spinner-Abrar-Ahmed.webp"
            },
            {
                title: "Cricket Sustainability Initiative Launched",
                content: "A new global initiative aims to make cricket more environmentally sustainable, focusing on reducing carbon footprint in tournaments.",
                image: "https://www.uca.ac.uk/media/marketing-media/news/news-2022/Sustainable-Cricket-Gear_news_web.jpg"
            },
            {
                title: "Australia Dominates in ODI Series",
                content: "Australia showcased their dominance in the ODI series against South Africa, winning 3-0.",
                image: "https://static.independent.co.uk/2022/11/19/11/560c683d4d6020019da3578c1c73b1feY29udGVudHNlYXJjaGFwaSwxNjY4OTQwODU0-2.69843652.jpg"
            },
            {
                title: "Pakistan's Young Talent Shines",
                content: "A young Pakistani cricketer has made headlines with his outstanding performance in the domestic league.",
                image: "https://burjnews.com/wp-content/uploads/2022/12/Spinner-Abrar-Ahmed.webp"
            }
        ];

        function displayNews() {
            const newsContainer = document.getElementById('newsContainer');
            newsContainer.innerHTML = '';
            newsItems.forEach(item => {
                const newsCard = document.createElement('div');
                newsCard.className = 'col-md-6 col-lg-4 mb-4';
                newsCard.innerHTML = `
                    <div class="news-card">
                        <img src="${item.image}" class="card-img-top" alt="${item.title}">
                        <div class="news-content">
                            <h5 class="news-title">${item.title}</h5>
                            <p class="news-text">${item.content}</p>
                        </div>
                    </div>
                `;
                newsContainer.appendChild(newsCard);
            });
        }

        displayNews();

        // Logout functionality
        document.getElementById('logoutBtn').addEventListener('click', async (e) => {
            e.preventDefault();
            try {
                const response = await fetch('/logout', {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    credentials: 'same-origin' // Ensures cookies are sent with the request
                });

                if (response.redirected) {
                    window.location.href = response.url; // Redirect to login or another page
                } else {
                    console.error('Logout failed');
                }
            } catch (error) {
                console.error('Logout error:', error);
            }
        });
    </script>
</body>
</html>
